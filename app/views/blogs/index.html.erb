
<h1>Happiness一覧</h1>

<%= notice %>
<div class = "blog">
  <table>
    <tr>
      <th><h3>タイトル</h3></th>
      <th><h3>内容</h3></th>
    </tr>  
    <% @blogs.each do |blog| %>
    <tr>
      <td class = "word"><%= blog.title %></td>
      <td class = "word"><%= blog.content %></td>
      
      <td><%= link_to "Happinessを編集する", edit_blog_path(blog.id), class:"btn btn-success" %></td>
      <td><%= link_to "Happinessを削除する", blog_path(blog.id), method: :delete, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </table>
</div>

<%= link_to "新しくHappinessを投稿する", new_blog_path, class:"btn btn-primary" %>
